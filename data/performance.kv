#:include 'data/navbar.kv'



<PerformanceHomeScreen>:
    name: 'performance-home-screen'
    NavBar:
           
        #MAF
        RelativeLayout:
            GaugeSmall:
                fill_fraction: app.mafOBDValue
                pos_hint: {'center_x': 0.9, 'center_y': 0.82}
                size_hint: 0.3, 0.3
            Label:
                text: app.mafOBD
                pos_hint: {'center_x': 0.9, 'center_y': 0.82}
                font_size: dp(20)
            Label:
                text: "MAF"
                pos_hint: {'center_x': 0.9, 'center_y': 0.66}
                

        #Timing Advance
        RelativeLayout:
            GaugeSmall:
                fill_fraction: app.timingAdvanceOBDValue
                pos_hint: {'center_x': 0.7, 'center_y': 0.82}
                size_hint: 0.3, 0.3
            Label:
                text: app.timingAdvanceOBD
                pos_hint: {'center_x': 0.7, 'center_y': 0.82}
                font_size: dp(20)
            Label:
                text: "Timing"
                pos_hint: {'center_x': 0.7, 'center_y': 0.66}
                font_size: dp(15)
        
        #Throttle
        RelativeLayout:
            GaugeSmall:
                fill_fraction: app.throttlePositionOBDValue
                pos_hint: {'center_x': 0.5, 'center_y': 0.82}
                size_hint: 0.3, 0.3
            Label:
                text: app.throttlePositionOBD
                pos_hint: {'center_x': 0.5, 'center_y': 0.82}
                font_size: dp(20)
            Label:
                text: "Throttle"
                pos_hint: {'center_x': 0.5, 'center_y': 0.66}
                font_size: dp(15)

            #Air Intake
            RelativeLayout:
                GaugeSmall:
                    fill_fraction: app.intakePressureOBDValue
                    pos_hint: {'center_x': 0.3, 'center_y': 0.82}
                    size_hint: 0.3, 0.3
                Label:
                    text: app.intakePressureOBD
                    pos_hint: {'center_x': 0.3, 'center_y': 0.82}
                    font_size: dp(20)
                Label:
                    text: "Air Intake"
                    pos_hint: {'center_x': 0.3, 'center_y': 0.66}
                    font_size: dp(15)

            #Coolant Temperature
            RelativeLayout:
                GaugeSmall:
                    fill_fraction: app.coolantTemperatureOBDValue
                    pos_hint: {'center_x': 0.1, 'center_y': 0.82}
                    size_hint: 0.3, 0.3
                Label:
                    text: app.coolantTemperatureOBD
                    pos_hint: {'center_x': 0.1, 'center_y': 0.82}
                    font_size: dp(20)
                Label:
                    text: "Coolant \N{DEGREE SIGN}C"
                    pos_hint: {'center_x': 0.1, 'center_y': 0.66}
                    font_size: dp(15)
            
        #RPM Gauge
        RelativeLayout:
            Gauge:
                fill_fraction: app.rpmOBDValue
                pos_hint: {'center_x': 0.5, 'center_y': 0.38}
                size_hint: 0.5, 0.5
            Label:
                text: app.rpmOBD
                pos_hint: {'center_x': 0.5, 'center_y': 0.38}
                font_size: dp(60)
            Label:
                text: "RPM"
                pos_hint: {'center_x': 0.5, 'center_y': 0.23}
                font_size: dp(20)

        #Speed
        Label:
            text: "MPH"
            pos_hint: {'center_x': 0.2, 'center_y': 0.49}
            font_size: dp(20)
        Label:
            text: app.speedOBD
            pos_hint: {'center_x': 0.2, 'center_y': 0.34}
            font_size: dp(60)
            
        #GEAR
        Label:
            text: "GEAR"
            pos_hint: {'center_x': 0.8, 'center_y': 0.49}
            font_size: dp(20)
        Label:
            text: app.gear
            pos_hint: {'center_x': 0.8, 'center_y': 0.34}
            font_size: dp(60)